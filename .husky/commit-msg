#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format (Conventional Commits)
# Format: type(scope?): subject
# Example: feat(button): add loading state

commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Regex for conventional commits
conventional_commit_regex='^(feat|fix|docs|style|refactor|perf|test|chore|build|ci|revert)(\(.+\))?: .{1,100}'

if ! echo "$commit_msg" | grep -qE "$conventional_commit_regex"; then
  echo "❌ Invalid commit message format!"
  echo ""
  echo "Commit message must follow Conventional Commits format:"
  echo "  <type>(scope?): <subject>"
  echo ""
  echo "Examples:"
  echo "  feat(button): add loading state"
  echo "  fix(input): resolve validation issue"
  echo "  docs: update README"
  echo ""
  echo "Valid types: feat, fix, docs, style, refactor, perf, test, chore, build, ci, revert"
  exit 1
fi

echo "✅ Commit message format is valid"
