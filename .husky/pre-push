#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Type check
echo "📝 Type checking..."
pnpm typecheck || {
  echo "❌ Type check failed. Please fix type errors before pushing."
  exit 1
}

# Run tests
echo "🧪 Running tests..."
pnpm test || {
  echo "❌ Tests failed. Please fix failing tests before pushing."
  exit 1
}

echo "✅ Pre-push checks passed!"
