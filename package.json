{
  "name": "vwx-design-system",
  "version": "0.1.0",
  "private": true,
  "description": "VW Xperience Design System - Automotive-inspired design system with AI integration",
  "scripts": {
    "dev": "pnpm --filter @vwx/components dev",
    "build": "pnpm --recursive build",
    "build:tokens": "pnpm --filter @vwx/tokens build",
    "build:components": "pnpm --filter @vwx/components build",
    "build:storybook": "pnpm --filter @vwx/docs build-storybook",
    "storybook": "pnpm --filter @vwx/docs storybook",
    "test": "pnpm --recursive test",
    "test:unit": "vitest",
    "test:e2e": "playwright test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "typecheck": "tsc --noEmit",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.50.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.0",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.0"
}
